<?xml version="1.0" encoding="utf-8"?>
<ArrayOfSimDescriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">

	<!-- Alignments -->

	<SimDescriptor Name="AlignementEvil1" Class="Alignement">
		<SimModifier Operator="Addition" Target="Speed" Value="1" Path="Player" />
		<SimModifier Operator="Addition" Target="MaxHealth" Value="-1" Path="Player" />
	</SimDescriptor>

	<SimDescriptor Name="AlignementEvil2" Class="Alignement">
		<SimModifier Operator="Addition" Target="Speed" Value="2" Path="Player" />
		<SimModifier Operator="Addition" Target="MaxHealth" Value="-2" Path="Player" />
	</SimDescriptor>
	
	<SimDescriptor Name="AlignementEvil3" Class="Alignement">
		<SimModifier Operator="Addition" Target="Speed" Value="1" Path="Player" />
		<SimModifier Operator="Addition" Target="MaxHealth" Value="-1" Path="Player" />
	</SimDescriptor>
	
	<SimDescriptor Name="AlignementGood1" Class="Alignement">
		<SimModifier Operator="Addition" Target="MaxHealth" Value="1" Path="Player" />
		<SimModifier Operator="Addition" Target="Speed" Value="-1" Path="Player" />
	</SimDescriptor>

	<SimDescriptor Name="AlignementGood2" Class="Alignement">
		<SimModifier Operator="Addition" Target="MaxHealth" Value="2" Path="Player" />
		<SimModifier Operator="Addition" Target="Speed" Value="-2" Path="Player" />
	</SimDescriptor>
	
	<SimDescriptor Name="AlignementGood3" Class="Alignement">
		<SimModifier Operator="Addition" Target="MaxHealth" Value="1" Path="Player" />
		<SimModifier Operator="Addition" Target="Speed" Value="-1" Path="Player" />
	</SimDescriptor>

	<!-- Difficulty -->

	<SimDescriptor Name="Difficulty1" Class="Difficulty">
		<SimModifier Operator="Percent" Target="Speed" Value=".1" Path="Foe" />
		<SimModifier Operator="Percent" Target="MaxHealth" Value=".2" Path="Foe" />
		<SimModifier Operator="Percent" Target="Attack" Value=".1" Path="Foe" />
		<SimModifier Operator="Percent" Target="Defence" Value=".1" Path="Foe" />
		<SimModifier Operator="Percent" Target="Speed" Value="-.1" Path="Friend" />
		<SimModifier Operator="Percent" Target="MaxHealth" Value="-.1" Path="Friend" />
		<SimModifier Operator="Percent" Target="Defence" Value="-.1" Path="Friend" />
	</SimDescriptor>

	<!-- Skills -->

	<SimDescriptor Name="BuffTestActive" Class="BuffTestActive">
		<SimModifier Operator="Product" Target="DamageReductionRatio" Value="0" Path="Player" />
	</SimDescriptor>

	<SimDescriptor Name="BuffTestPassive" Class="BuffTestPassive">
		<SimModifier Operator="Percent" Target="Defence" Value=".3" Path="Player" />
	</SimDescriptor>

</ArrayOfSimDescriptor>