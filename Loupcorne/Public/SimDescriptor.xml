<?xml version="1.0" encoding="utf-8"?>
<ArrayOfSimDescriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">

	<SimDescriptor Name="HolySword" Class="Item,Weapon">
	 	<SimModifier Operator="Product" Target="Attack" Value="2" Path="Player" />
	 	<SimModifier Operator="Percent" Target="Defence" Value="-.5" Path="Player" />
	</SimDescriptor>

	<SimDescriptor Name="HolyArmor" Class="Item,Chest">
		<SimModifier Operator="Percent" Target="Defence" Value=".2" Path="Player" />
		<SimModifier Operator="Addition" Target="Speed" Value="-1" Path="Player" />
	</SimDescriptor>

	<SimDescriptor Name="AlignementEvil1" Class="Alignement,Evil">
		<SimModifier Operator="Addition" Target="Speed" Value="1" Path="Player" />
		<SimModifier Operator="Addition" Target="LifePoints" Value="-1" Path="Player" />
	</SimDescriptor>

	<SimDescriptor Name="AlignementEvil2" Class="Alignement,Evil">
		<SimModifier Operator="Addition" Target="Speed" Value="2" Path="Player" />
		<SimModifier Operator="Addition" Target="LifePoints" Value="-2" Path="Player" />
	</SimDescriptor>

	<SimDescriptor Name="AlignementGood1" Class="Alignement,Good">
		<SimModifier Operator="Addition" Target="LifePoints" Value="1" Path="Player" />
		<SimModifier Operator="Addition" Target="Speed" Value="-1" Path="Player" />
	</SimDescriptor>

	<SimDescriptor Name="AlignementGood2" Class="Alignement,Good">
		<SimModifier Operator="Addition" Target="LifePoints" Value="2" Path="Player" />
		<SimModifier Operator="Addition" Target="Speed" Value="-2" Path="Player" />
	</SimDescriptor>

	<SimDescriptor Name="Difficulty1" Class="Alignement,Good">
		<SimModifier Operator="Percent" Target="Speed" Value=".1" Path="Foe" />
		<SimModifier Operator="Percent" Target="LifePoints" Value=".2" Path="Foe" />
		<SimModifier Operator="Percent" Target="Attack" Value=".1" Path="Foe" />
		<SimModifier Operator="Percent" Target="Defence" Value=".1" Path="Foe" />
		<SimModifier Operator="Percent" Target="Speed" Value="-.1" Path="Friend" />
		<SimModifier Operator="Percent" Target="LifePoints" Value="-.1" Path="Friend" />
		<SimModifier Operator="Percent" Target="Defence" Value="-.1" Path="Friend" />
		
	</SimDescriptor>

</ArrayOfSimDescriptor>